<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lupafinance.CadastroCliente"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#d0cde1">

    <ScrollView>
        <StackLayout HorizontalOptions="Center"
                VerticalOptions="Center">

            <!-- Logo and Title -->
            <Image Source="logopredio.png"
                    HorizontalOptions="Center"
                    Margin="100,0"
                    HeightRequest="200"/>
            <Label Text="LUPA FINANCE"
                    FontSize="24"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>
            <Label Text="OLHANDO DE PERTO, GERINDO DE LONGE"
                    FontSize="14"
                    HorizontalOptions="Center"/>

            <!-- Cadastro Label -->
            <Label Text="CADASTRO"
                    FontSize="20"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Margin="0,20,0,20"/>

            <!-- Email Entry -->
            <Entry x:Name="emailEntry"
                    Placeholder="Email"
                    Keyboard="Email"
                    TextColor="Black"
                    BackgroundColor="AliceBlue"
                    Margin="40,0"/>

            <!-- Password Entry -->
            <Entry x:Name="passwordEntry"
                    Placeholder="Senha"
                    IsPassword="True"
                    TextColor="Black"
                    BackgroundColor="AliceBlue"
                    Margin="40,5"/>

            <!-- Esqueceu Senha and JÃ¡ possuo Conta buttons -->
            <StackLayout Orientation="Horizontal"
                    HorizontalOptions="Center"
>
                <Button Text="Esqueceu senha"
                        TextColor="White"
                        BackgroundColor="Black"
                        Margin="0,20,10,0"/>
                <Button Text="Cadastrar-se"
                        TextColor="White"
                        BackgroundColor="Black"
                        Margin="5,20,0,0"/>
            </StackLayout>

            <!-- Cadastrar-se Button -->
            <Button Text="Voltar"
                    TextColor="Black"
                    BackgroundColor="White"
                    Margin="150,20,150,0"
                    Clicked="OnVoltarButtom"/>

            </StackLayout>

        
    </ScrollView>
</ContentPage>
